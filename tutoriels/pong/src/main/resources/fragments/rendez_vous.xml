<?xml version="1.0" encoding="UTF-8"?>

<?import pong.frontal.vues.controles.FlexBoxRendezVous?>

<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<HBox xmlns:fx="http://javafx.com/fxml"
    fx:controller="pong.frontal.vues.fragments.FragmentRendezVous" 
    styleClass="conteneur,fragment-rendez-vous">

    <Pane styleClass="grand-espace-horizontal"/>

    <FlexBoxRendezVous HBox.Hgrow="ALWAYS" styleClass="conteneur,rendez-vous">

        <Label
            fx:id="labelNomPremierJoueur"
            styleClass="label-nom-joueur">
        </Label>

        <Pane HBox.Hgrow="ALWAYS" minHeight="20"/>

        <Button 
            fx:id="boutonOuvrirPartie" 
            text="%ouvrirPartie"
            styleClass="gros-bouton">
        </Button>

    </FlexBoxRendezVous>

    <Pane styleClass="grand-espace-horizontal"/>

</HBox>
